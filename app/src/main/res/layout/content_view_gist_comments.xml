<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="inaka.com.gistoid.activities.ViewGistCommentsActivity"
              tools:showIn="@layout/activity_view_gist_comments">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewComments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/textNoComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/text_no_comments"
            android:textSize="16sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/textNewComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:hint="@string/hint_edit_text"/>

        <ImageButton
            android:id="@+id/buttonSendComment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/send_button"
            android:src="@drawable/ic_action_send_dark"/>

    </LinearLayout>

</LinearLayout>
